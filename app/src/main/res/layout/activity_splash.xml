<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/splash_imageview"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/illustration_welcome"
        android:layout_width="210dp"
        android:layout_height="210dp"/>

    <Button
        android:id="@+id/signup_btn_splash"
        app:layout_constraintTop_toBottomOf="@id/splash_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/ripple_bg_black"
        android:layout_marginTop="11dp"
        android:layout_width="274dp"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/signin_btn_splash"
        android:text="LOGIN"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="@drawable/ripple_bg_white"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/signup_btn_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="274dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/forgot_btn_splash"
        android:layout_marginTop="47dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="forget your account?"
        app:layout_constraintTop_toBottomOf="@id/signin_btn_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>